<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0a0"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name"
        android:id="@+id/name"
        android:width="1.2in"
        android:maxLength="35"
        android:lines="2"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/icon"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=",00"
        android:id="@+id/valueExpectedDecimal"
        android:maxLength="3"
        android:textSize="18dp"
        android:textColor="#0f0"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00000000000000"
        android:id="@+id/valueExpected"
        android:maxLength="9"
        android:textSize="22dp"
        android:textColor="#0f0"
        android:layout_alignTop="@id/valueExpectedDecimal"
        android:layout_toStartOf="@+id/valueExpectedDecimal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=",00"
        android:id="@+id/valueActualDecimal"
        android:maxLength="3"
        android:textSize="18dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/valueExpected"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00000000000000"
        android:id="@+id/valueActual"
        android:maxLength="9"
        android:textSize="22dp"
        android:layout_alignTop="@id/valueActualDecimal"
        android:layout_toStartOf="@+id/valueActualDecimal" />








</RelativeLayout>